@using جدول_محاسبة.Data.Models

@code {
    [Parameter] public DailyResult Result { get; set; }
}

<div class="history-item mb-4 px-3 py-3 rounded" style="background:#f2faf7; border:1.5px solid #b6ceba;">
    <div class="d-flex justify-content-between align-items-center">
        <strong>
            @Result.Date.ToString("yyyy/MM/dd")
        </strong>
        <span>النسبة: <b>@Result.Percentage.ToString("0")%</b></span>
    </div>
    <div class="progress mt-2" style="height:18px;">
        <div class="progress-bar bg-success" role="progressbar" style="width:@Result.Percentage%;" aria-valuenow="@Result.Percentage" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="mt-2 small">
        <span style="color:#387c6b">✓ المنجز:</span>
        <span>@(string.IsNullOrWhiteSpace(Result.CompletedTasks) ? "لا شيء" : Result.CompletedTasks.Replace(",", "، "))</span>
    </div>
    <div class="mt-1 small">
        <span style="color:#ad4c4c">✗ الفائت:</span>
        <span>@(string.IsNullOrWhiteSpace(Result.MissedTasks) ? "لا شيء" : Result.MissedTasks.Replace(",", "، "))</span>
    </div>
</div>